<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">
    <changeSet author="akiselev" id="20250312_tasks">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="tasks"/>
            </not>
        </preConditions>

        <createTable tableName="tasks" remarks="Задачи">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created" type="timestamp with timezone" remarks="Дата создания записи">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="timestamp with timezone" remarks="Дата изменения записи">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="text" remarks="Заголовок задачи">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="text" remarks="Статус задачи">
                <constraints nullable="false"/>
            </column>
            <column name="author" type="uuid" remarks="Автор задачи">
                <constraints nullable="false"/>
            </column>
            <column name="assignee" type="uuid" remarks="Исполнитель задачи"/>
            <column name="priority" type="text" remarks="Приоритет задачи">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text" remarks="Описание задачи"/>
        </createTable>
    </changeSet>
</databaseChangeLog>